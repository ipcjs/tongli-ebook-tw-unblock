{
    "name": "Tongli Ebook Unblock",
    "description": "解除東立電子書城区域限制",
    "version": "0.0.3",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "activeTab",
        "downloads",
        "webRequestBlocking",
        "*://ebook.tongli.com.tw/*",
        "https://*.azurewebsites.net/"
    ],
    "browser_action": {
        "default_popup": "src/popup.html",
        "default_icon": "images/logo.png"
    }
}